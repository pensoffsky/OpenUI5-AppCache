<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="view.Main" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	xmlns:custom="view"
	>
	<Page title="UI5 AppCache v02">
		<headerContent>
			<Button text="Refresh" 
					tooltip="Refresh" 
					press="onTriggerRefresh"/>
		</headerContent>
		<content>
			<List items="{localUIModel>/symbols}"
					mode="Delete"
					delete="onDeleteSymbol">
				<ObjectListItem title="{localUIModel>symbol}" 
								number="{localUIModel>price}"
								numberUnit="{localUIModel>currency}"
								>
					<firstStatus>
						<ObjectStatus
							text="{localUIModel>lastTradeDateTime}"/>
					</firstStatus>
					<attributes>
						<ObjectAttribute text="{localUIModel>name}" />
					</attributes>
				</ObjectListItem>
			</List>
			<CustomListItem>
				<HBox>
					<Input value="{localUIModel>/newSymbol}"
							placeholder="Symbol"/>
					<Button text="Add Symbol" 
							press="onAddSymbol"/>
				</HBox>
			</CustomListItem>
		</content>
	</Page>
</core:View>